{
  "name": "mediafaker",
  "version": "0.1.0",
  "description": "Treat an element as if it was the viewport for css, making media queries work without an iframe",
  "main": "lib/library.js",
  "scripts": {
    "build": "webpack --env build",
    "dev": "webpack --progress --colors --watch --env dev",
    "test": "mocha --compilers js:babel-core/register --colors ./test/*.spec.js",
    "test:watch": "mocha --compilers js:babel-core/register --colors -w ./test/*.spec.js"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-core": "6.24.1",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.0.0",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-preset-es2015": "6.24.1",
    "chai": "3.5.0",
    "eslint": "3.19.0",
    "eslint-loader": "1.7.1",
    "mocha": "3.3.0",
    "webpack": "3.1.0",
    "webpack-dev-server": "^2.7.1",
    "yargs": "7.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/decad/mediafaker.git"
  },
  "keywords": [
    "media",
    "query",
    "mediaquery",
    "iframe"
  ],
  "author": "Declan Cook",
  "license": "MIT",
  "homepage": "https://github.com/decad/mediafaker",
  "dependencies": {
    "css-mediaquery": "^0.1.2",
    "element-resize-detector": "^1.1.12",
    "iselement": "^1.1.4",
    "raf": "^3.3.2"
  }
}
